{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "mapRoot": "./",
    "rootDir": ".",
    "baseUrl": ".",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "../dist/out-tsc",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "paths": {
      "app" : ["./app" ],
      "app-shared": [ "./shared" ],
      "app-containers": [ "./containers" ],
      "app-components": [ "./components" ],
      "app-services": ["./services"],
      "app-models": ["./models"],
      "app-utils": ["./utils"],
      //redux
      "app-actions": ["./redux/actions"],
      "app-effects": ["./redux/effects"],
      "app-reducers": ["./redux/reducers"],
      "app-states": ["./redux/states"]
    }
  }
}
