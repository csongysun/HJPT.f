{
  "compilerOptions": {
    "baseUrl": "",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2016",
      "dom"
    ],
    "mapRoot": "./",
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "../dist/out-tsc",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "paths": {
      "app": ["./app"],
      "app-containers": ["./app/containers"],
      "app-components": ["./app/components"],
      "app-directives": ["./app/directives"],
      "app-services": ["./app/services"],
      "app-models": ["./app/models"],
      "app-utils": ["./app/utils"],
      "app-rxjs": ["./app/utils/rxjs"],
      "app-actions": ["./app/redux/actions"],
      "app-effects": ["./app/redux/effects"],
      "app-reducers": ["./app/redux/reducers"],
      "app-states": ["./app/redux/states"]
    }
  }
}
